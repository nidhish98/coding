print name n time

void name(int i,int n) {
    if (i>n) {
        return;  // base case
    }
    cout << "nidhish ";
    
    name(i+1,n);
}

int main() {
    int n = 5;             o(n) and o(n)
    name(0,n);

    return 0;
}
q-print from n to 1
void name(int i,int n) {
    if (i<1) {
        return;  // base case
    }
    cout << i ;
    
    name(i-1,n);
}

int main() {
    int n = 4;
    name(n,n);

    return 0;
}

print name n time

void name(int i,int n) {
    if (i>n) {
        return;  // base case
    }
    cout << "nidhish ";
    
    name(i+1,n);
}

int main() {
    int n = 5;             o(n) and o(n)
    name(0,n);

    return 0;
}
